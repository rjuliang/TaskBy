<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskSavedScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/taskLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Task 1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Oct 4"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/editTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:foregroundTint="@android:color/background_dark"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@android:drawable/ic_menu_edit"
            tools:clickable="true" />

        <ImageButton
            android:id="@+id/shareTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="?attr/actionModeShareDrawable"
            tools:clickable="true" />

        <ImageButton
            android:id="@+id/deleteTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@android:drawable/ic_menu_delete"
            tools:clickable="true" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="auto"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:srcCompat="@android:drawable/ic_input_add" />

    <LinearLayout
        android:id="@+id/textViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:text="@string/add_task"
            android:textAlignment="center"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>